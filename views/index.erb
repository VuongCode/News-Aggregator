<h3> Articles! </h3>

<div align="center">
  <% if @articles.empty? %>
   <p> Err! Please create an article!</p>

  <% else %>
    <% @articles.each do |info| %>
      <div>
        <li> <%= info[0] %> </li>
        <li><a href="<%= info[1] %>"> <%= info[1] %> </a></li>
        <li><%= info[2] %></li>
      </div>
    <% end %>
  <%end%>
</div>

<a href="/articles/new"> New article please! </a>
